---
import type { CollectionEntry } from 'astro:content'
import { Image } from 'astro:assets'

export interface Props {
  event: CollectionEntry<'events'>
}

const { id, data } = Astro.props.event

---

<div class="flex flex-col md:flex-row">
  <div class="basis-4/12 flex-none m-0 p-0">
    <Image
      src={data.image}
      alt={`${data.title} preview`}
      height=400
      width=400
      loading="eager"
    />
  </div>
  <div class="flex flex-col gap-2 pl-8 place-content-center">
    <div>
        <div class="font-black text-2xl">{data.title}</div>
      <div class="text-base">{data.date}</div>
    </div>
    <div class="opacity-75 text-base">
      {data.description}
    </div>
  {
    data.link && (
    <a target="_blank" href={data.link} class="opacity-75">LINK</a>
    )
  }
  </div>
</div>
